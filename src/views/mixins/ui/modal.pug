mixin modal(id, options = {})
  -
    const innerClasses = {
      base: "max-w-full",
      variant: {
        full: "w-full min-h-full my-auto",
        bottom: "mt-auto",
      },
      isUnstyled: {
        true: "",
        false: "flex flex-col gap-y-6 bg-bg-light-primary pt-4 pb-8 px-4",
      },
    }

    const innerVariantClass = innerClasses.variant[options.variant ?? "full"];
    const innerUnstyledClass = innerClasses.isUnstyled[options.isUnstyled ?? false];

  div(
    id=id,
    tabindex="-1",
    aria-hidden="true",
    class="hidden overflow-auto fixed inset-0 z-(--z-modal) w-full max-h-full bg-bg-dark-primary/20 transition-[opacity,_display] transition-discrete duration-(--duration-md) opacity-100 [[aria-hidden=true]]:opacity-0 starting:opacity-0"
  )
    div(class=innerClasses.base, class=innerVariantClass, class=innerUnstyledClass)
      if !options.isUnstyled
        div(class="flex justify-end")
          +button-icon("close")(aria-label="Закрыть", data-modal-hide=id)
      div(class="flex flex-col items-center justify-center grow-1")
        block
