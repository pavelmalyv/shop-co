mixin accordion(id)
  div(id=id, data-accordion="open", class="space-y-6 max-md:space-y-5")
    block

mixin accordion-item(content)
  div(class="pt-6 max-md:pt-5 border-t-1 border-border-primary/10")
    h3(id=`${content.accordionId}-${content.id}-heading`)
      button(
        type="button",
        data-accordion-target=`#${content.accordionId}-${content.id}-body`,
        aria-expanded="true",
        aria-controls=`${content.accordionId}-${content.id}-body`,
        class="group text-xl font-bold flex items-start justify-between w-full gap-x-2"
      )
        span
          = content.title
        span(class="group-[[aria-expanded=true]]:rotate-180 text-2xl max-md:text-base")
          +icon("forward-bottom")
    div(
      id=`${content.accordionId}-${content.id}-body`,
      aria-labelledby=`${content.accordionId}-${content.id}-heading`,
      class="mt-6 max-md:mt-4 hidden"
    )
      block
