mixin cart-card(id, content)
  article(
    class="not-last:border-b-1 border-border-primary/10 not-last:pb-6 max-lg:not-last:pb-5 max-md:not-last:pb-4",
    data-js-cart-card
  )
    form(id=id, data-js-cart-form, class="flex items-start gap-x-4 max-sm:flex-col max-sm:gap-y-4")
      input(type="hidden", name="price", value=content.price)
      input(type="hidden", name="discount", value=content.discount)
      +img(
        src=content.img.src,
        width=content.img.width,
        height=content.img.height,
        alt=content.img.alt,
        class="w-31 shrink-0 max-lg:w-28 max-md:w-25 rounded-2xs bg-fill-primary"
      )
      div(class="self-center w-full")
        div(class="flex items-start justify-between gap-x-4 mb-1")
          h2(class="text-xl max-lg:text-lg max-md:text-base font-bold")
            | Футболка с&nbsp;градиентным рисунком</h2>
          div(class="text-warning-primary")
            +button-icon("delete", { hover: "dark" })(
              aria-label="Удалить из корзины",
              data-js-cart-delete-button
            )
        - const specifications = [{ title: "Размер", value: "L" }, { title: "Цвет", value: "Белый" }];
        +specifications(specifications)

        div(class="flex items-end justify-between gap-x-4 gap-y-3 flex-wrap")
          +price({ price: "2 600" })
          +quantity-field(`${id}-quantity`, { min: "1", max: "100", size: "sm" })(
            value="1"
          )
